<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2FA2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">


     <ImageButton
        android:src="@drawable/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/imageButton1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"    
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/triangle"
        android:id="@+id/start" />
    

    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout1"
        android:columnCount="1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:text="@string/restorePassword"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="300px"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView1" />
        
        <TextView
            android:text="@string/email"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="150px"
            android:layout_marginLeft="40px"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/textView2" />

        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:textSize="25sp"
            android:paddingVertical="5px"
            android:paddingHorizontal="20px"
            android:hint="@string/placeholderEmail"
            android:background="@android:color/white"
            android:id="@+id/editText1" />
        
        <Button
            android:text="@string/resetPassword"
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F64C72"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="100px"
            android:paddingVertical="40px"
            android:paddingHorizontal="70px"
            android:textStyle="bold" />
        

    </GridLayout>

</RelativeLayout>
