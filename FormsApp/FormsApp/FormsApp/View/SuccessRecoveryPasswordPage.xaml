<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsApp.View.SuccessRecoveryPasswordPage"
             BackgroundColor="#2F2FA2">
    <ContentPage.Content>
        <Grid>
            <Path Fill="#1E1F95" Data="M-30 250L500 530L150 800L-30 250Z"/>
            <StackLayout>
                <Label Text="Восстановление пароля" TextColor="White" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,125,0,0"/>
                <Label TextColor="White" FontSize="20" Text="На указанный электронный адрес были высланы дальнейшие инструкции." Padding="15, 30, 15, 0"/>
                <Label TextColor="White" FontSize="20"  Text="Следуйте им для восстановления пароля." Padding="15"/>
                <StackLayout Padding="70,30,70,0">
                    <Button Text="В меню" Command="{Binding GoToMenuCommand}" BackgroundColor="#F64C72" TextColor="White" FontSize="20" FontAttributes="Bold" />
                </StackLayout>


            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>