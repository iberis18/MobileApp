<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2FA2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"    
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/triangle"
        android:id="@+id/start" />

    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout1"
        android:columnCount="1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageButton
            android:src="@drawable/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/imageButton1" />



        <ImageView
            android:layout_marginTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/thinkinglarge"
            android:id="@+id/ImageView1" />
        
        <TextView
            android:text="@string/testName"
            android:layout_marginTop="100px"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView1" />


        <GridLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/gridLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="3"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >


            <Button
                android:text="@string/startTest"
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F64C72"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="100px"
                android:paddingVertical="40px"
                android:paddingHorizontal="100px"
                android:textStyle="bold" />

            <Button
                android:text="@string/help"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#99738E"
                android:layout_gravity="fill"
                android:textSize="16sp"
                android:layout_marginTop="60px"
                android:paddingVertical="40px"
                android:paddingHorizontal="50px"
                android:textStyle="bold" />

        </GridLayout>

    </GridLayout> 

</RelativeLayout>

