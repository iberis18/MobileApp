<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsApp.View.MainPage"
             BackgroundColor="#2F2FA2">

    <Grid>
        <Path Fill="#1E1F95" Data="M-30 250L500 530L150 800L-30 250Z"/>
        <StackLayout>
            <Image Margin="100,50,100,20" Source="icon.png" />
            <Label Text="Мобильный психотест" TextColor="White" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <StackLayout Padding="100,50,100,0">
                <Button Text="Вход" Command="{Binding LoginCommand}" BackgroundColor="#F64C72" TextColor="White" FontSize="20" FontAttributes="Bold"/>
                <Button Text="Регистрация" Command="{Binding RegistrationCommand}" TextColor="White" FontSize="20" FontAttributes="Bold" BackgroundColor="Transparent" BorderColor="#99738E" BorderWidth="4" Margin="0,20,0,0"/>
            </StackLayout>
        </StackLayout>
    </Grid>



</ContentPage>
