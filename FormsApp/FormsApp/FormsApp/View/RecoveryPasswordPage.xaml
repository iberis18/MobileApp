<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsApp.View.RecoveryPasswordPage"
             BackgroundColor="#2F2FA2">
    <ContentPage.Content>
        <Grid>
            <Path Fill="#1E1F95" Data="M-30 250L500 530L150 800L-30 250Z"/>
            <StackLayout>
                <ImageButton Source="backButton" Command="{Binding BackCommand}" BackgroundColor="Transparent" HorizontalOptions="Start" Margin="20"/>
                <Label Text="Восстановление пароля" TextColor="White" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="30"/>
                <StackLayout Padding="20,20,20,10">
                    <Label Text="Электронная почта:" TextColor="White" FontSize="25" FontAttributes="Bold"/>
                    <Entry BackgroundColor="White" Text="{Binding Email}" Placeholder="email@gmail.com" Margin="0,10,0,0"/>
                    <StackLayout Padding="70,70,70,0">
                        <Button Text="Сбросить пароль" Command="{Binding RecoveryPasswordCommand}" BackgroundColor="#F64C72" TextColor="White" FontSize="20" FontAttributes="Bold" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>