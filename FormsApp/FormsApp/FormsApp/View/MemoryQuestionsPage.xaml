<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsApp.View.MemoryQuestionsPage"
             BackgroundColor="#2F2FA2">

    <ContentPage.Content>
        <Grid>
            <Path Fill="#1E1F95" Data="M-30 250L500 530L150 800L-30 250Z" />

            <ScrollView>
                <StackLayout>
                    <Label HorizontalTextAlignment="Center" Text="Запомните" TextColor="White" FontSize="30"
                           FontAttributes="Bold" Margin="20,20,20,10" />
                    <Image Source="{Binding QuestionImage}" Margin="20,50,20,0" />
                </StackLayout>

            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>